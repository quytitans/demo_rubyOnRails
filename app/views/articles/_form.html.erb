<%= form_with model: @article do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: "form-control" %>
    <% if @article.errors.any? %>
      <%= @article.errors.full_messages_for(:title).first do |message| %>
        <p style="color:red;"><%= message %></p>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: "form-control" %>
    <% if @article.errors.any? %>
      <%= @article.errors.full_messages_for(:body).first do |message| %>
        <p style="color:red;"><%= message %></p>
      <% end %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>