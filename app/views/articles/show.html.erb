<% content_for :title do %>
  Detail
<% end %>
<div class="container">
  <%= link_to "List", articles_path, class: "btn btn-secondary" %>
  <h1>Detail</h1>

  <div class="card mb-3" >
    <div class="row g-0">
      <div class="col-md-4">
        <img src="" class="img-fluid rounded-start" alt="image">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= @article.title %></h5>
          <p class="card-text"><%= @article.body %></p>
        </div>
      </div>
    </div>
  </div>


  <%= link_to "Edit", edit_article_path(@article), class: "btn btn-info" %>
  <%= link_to "Destroy", article_path(@article),
              method: :delete,
              data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

</div>
